{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "types": ["jest", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist"
  },
  "files": ["types/utils.d.ts", "types/styles.d.ts"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "coverage",
    "tests",
    "stories",
    ".storybook",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
